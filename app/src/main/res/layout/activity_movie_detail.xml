<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.digian.movies.screens.detail.MoviesDetailActivity">

    <ImageView
        android:contentDescription="@string/the_movie_main_image"
        android:id="@+id/mainImage"
        android:padding="@dimen/material_grid_padding_double"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_grid_padding_double"
        />

    <TextView android:id="@+id/title"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:padding="@dimen/material_grid_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/description"
        android:padding="@dimen/material_grid_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/moviecollection"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
